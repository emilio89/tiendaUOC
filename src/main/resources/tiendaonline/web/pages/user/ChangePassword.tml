<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title" t:menuExplanation="menuExplanation">

	<div class="single_top">
		<div class="container">

			<div class="register">
				<div class="col-md-6 login-right" style="width: 60%;margin-left: 25%;">

					<h3>${message:menuExplanation}</h3>

					<form t:type="Form" t:id="changePasswordForm">
						<t:errors />
						<div>
							<span style="float:left;width: 40%;line-height: 35px;">${message:oldPassword-label}</span>
							<input
								style="float:left;width: 40%; vertical-align: center;border: 1px solid #DDDBDB;padding: 8px;"
								t:id="oldPassword" t:type="PasswordField" t:validate="required"
								size="16" maxlength="8" />
						</div>
						<div style="margin-top: 35px;">
							<span style="float:left;width: 40%;line-height: 35px;">${message:newPassword-label}</span>
							<input
								style="float:left;width: 40%; vertical-align: center;border: 1px solid #DDDBDB;padding: 8px;"
								t:id="newPassword" t:type="PasswordField" t:validate="required"
								size="16" maxlength="8" />
						</div>
						<div style="margin-top: 35px;">
							<span style="float:left;width: 40%;line-height: 35px;">${message:retypeNewPassword-label}</span>
							<input
								style="float:left;width: 40%; vertical-align: center;border: 1px solid #DDDBDB;padding: 8px;"
								t:id="retypeNewPassword" t:type="PasswordField" t:validate="required"
								size="16" maxlength="8" />
						</div>

						<div style="margin-top: 35px;">
							<input type="submit" value="${message:submit}" />
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>


</html>