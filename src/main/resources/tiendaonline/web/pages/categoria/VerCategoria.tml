<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title" 
	t:menuExplanation="menuExplanation">
  


<div class="single_top">
	 <div class="container"> 
	 	 
	    <div class="register">
			<div class="col-md-6 login-right" style="width: 50%;margin-left: 30%;">
			
			  	<h3>${message:menuExplanation}</h3>
		
				<form t:type="Form" t:id="actualizarCategoriaForm">	
			   	<t:errors/>	
				  <div>
					<span style="float:left;width: 30%;line-height: 35px;">${message:id}</span>
	           		 <input style="float:left;width: 40%; vertical-align: center;" t:id="idCategoria2" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
				  </div>
				  <div style="margin-top: 35px;">
					<span style="float:left;width: 30%;line-height: 35px;">${message:nombre}</span>
	           		 <input style="float:left;width: 40%; vertical-align: center;" t:id="nombreCategoria" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
				  </div>				  
				  <div style="margin-top: 35px;">
					<span style="float:left;width: 30%;line-height: 35px;">${message:padre}</span>
	           		 <input style="float:left;width: 40%; vertical-align: center;" t:id="idCategoriaPadre" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
				  </div>
				  <div style="margin-top: 35px;">						  			    
				    <input type="submit" value="${message:submit}"/>
				  </div>				            

			    </form>			    
		   </div>			   
		</div>
     </div>
</div>        
  
</html>